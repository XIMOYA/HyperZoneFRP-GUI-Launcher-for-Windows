<Page
    x:Class="HyperZoneFRPGUILauncherforWindows.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- 样式保持不变 -->
        <Style x:Key="FormFieldStyle" TargetType="Control">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="LoginButtonStyle" TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- 全屏背景图 -->
        <Image Source="/Assets/WelcomeBg_2.png" Stretch="UniformToFill"/>

        <!-- 左右分栏布局 -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" MinWidth="400"/>
                <ColumnDefinition Width="1*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧品牌区 -->
            <Grid Grid.Column="0" Background="Transparent">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                    <Image Source="/Assets/Logo.png" Width="96" Height="96" />
                    <TextBlock Text="HyperZoneFRP" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="连接你我 ，穿透未来" FontSize="16" Foreground="#DDDDDD" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- =================================================================== -->
            <!-- ★★★ 右侧登录区 (已重构为双层布局) ★★★ -->
            <!-- =================================================================== -->
            <Grid Grid.Column="1" 
                  Background="{ThemeResource SystemControlAcrylicWindowBrush}">

                <!-- 内层：浮动的登录卡片 -->
                <Border VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="380"
                        Padding="32"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1">

                    <StackPanel Spacing="16">
                        <!-- 标题 -->
                        <TextBlock Text="欢迎回来！" 
                                   FontSize="24" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,12"
                                   HorizontalAlignment="Center"/>

                        <!-- 登录失败信息提示栏 -->
                        <InfoBar x:ConnectionId='2' x:Name="LoginErrorBar" Severity="Error" IsClosable="True" IsOpen="False" Margin="0,0,0,4"/>

                        <!-- 账号输入框 -->
                        <TextBox x:ConnectionId='3' x:Name="UsernameTextBox" 
                                 Header="账号" 
                                 PlaceholderText="请输入您的用户名或邮箱"
                                 Style="{StaticResource FormFieldStyle}"/>

                        <!-- 密码输入框 -->
                        <PasswordBox x:ConnectionId='4' x:Name="PasswordTextBox" 
                                     Header="密码" 
                                     PlaceholderText="请输入您的密码"
                                     Style="{StaticResource FormFieldStyle}"/>

                        <!-- 辅助功能 -->
                        <Grid Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox x:ConnectionId='8' x:Name="RememberMeCheckBox" Content="记住我" Grid.Column="0"/>
                            <HyperlinkButton Content="忘记密码?" Grid.Column="1" />
                        </Grid>

                        <!-- 登录按钮 -->
                        <Button x:ConnectionId='5' x:Name="LoginButton"
                                Style="{StaticResource LoginButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Margin="0,16,0,0"
                                                         >
                            <Button.Content>
                                <Grid>
                                    <TextBlock x:ConnectionId='6' x:Name="LoginButtonText" Text="登录"/>
                                    <ProgressRing x:ConnectionId='7' x:Name="LoginProgressRing" IsActive="False" Visibility="Collapsed" Width="20" Height="20" Foreground="White"/>
                                </Grid>
                            </Button.Content>
                        </Button>

                        <!-- 注册提示 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                            <TextBlock Text="还没有账号?" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <HyperlinkButton Content="立即注册" Margin="4,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>

