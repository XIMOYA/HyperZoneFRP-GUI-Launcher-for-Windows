<Page x:ConnectionId='1'
    x:Class="HyperZoneFRPGUILauncherforWindows.Pages.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="WelcomeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="24"/>
            <Setter Property="Padding" Value="48,12"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="RootGrid" 
                          Background="{TemplateBinding Background}" 
                          BorderBrush="{TemplateBinding BorderBrush}" 
                          BorderThickness="{TemplateBinding BorderThickness}" 
                          CornerRadius="{TemplateBinding CornerRadius}">

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />

                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <!-- 鼠标悬停时，背景色在 0.2 秒内变为白色 -->
                                            <ColorAnimation Storyboard.TargetName="RootGrid" 
                                                        Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)" 
                                                        To="White" 
                                                        Duration="0:0:0.2"/>
                                            <!-- 同时，文字颜色在 0.2 秒内变为黑色 -->
                                            <ColorAnimation Storyboard.TargetName="ContentPresenter" 
                                                        Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" 
                                                        To="Black" 
                                                        Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </VisualState>

                                    <VisualState x:Name="Pressed">
                                        <!-- 按下时，瞬间改变颜色 (使用 Setter) -->
                                        <VisualState.Setters>
                                            <Setter Target="RootGrid.Background" Value="{ThemeResource ButtonBackgroundPressed}"/>
                                            <Setter Target="ContentPresenter.Foreground" Value="{ThemeResource ButtonForegroundPressed}"/>
                                        </VisualState.Setters>
                                    </VisualState>

                                    <VisualState x:Name="Disabled">
                                        <!-- 禁用时，瞬间改变颜色 (使用 Setter) -->
                                        <VisualState.Setters>
                                            <Setter Target="RootGrid.Background" Value="{ThemeResource ButtonBackgroundDisabled}"/>
                                            <Setter Target="ContentPresenter.Foreground" Value="{ThemeResource ButtonForegroundDisabled}"/>
                                            <Setter Target="RootGrid.BorderBrush" Value="{ThemeResource ButtonBorderBrushDisabled}"/>
                                        </VisualState.Setters>
                                    </VisualState>

                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>

                            <ContentPresenter x:Name="ContentPresenter"
                                          Content="{TemplateBinding Content}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Padding="{TemplateBinding Padding}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>


    <Grid>
        <!-- 2. 背景图片容器 (在最底层) -->
        <!-- 我们放两个 Image 控件，一个在前一个在后，通过切换它们的透明度来实现淡入淡出 -->
        <Image x:ConnectionId='10' x:Name="BackgroundImageView1" Stretch="UniformToFill" Opacity="1"/>
        <Image x:ConnectionId='11' x:Name="BackgroundImageView2" Stretch="UniformToFill" Opacity="0"/>

        <!-- 3. 半透明遮罩层 -->
        <Rectangle Fill="#A0000000" />

        <!-- 4. 主要内容网格 (在遮罩层之上) -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- 5. 翻页视图 (背景设为透明) -->
            <FlipView x:ConnectionId='12' x:Name="FeaturesFlipView" 
                      Grid.Row="0" 
                      Background="Transparent"
                                                                          >

                <!-- 第 1 页：欢迎 -->
                <Grid>
                    <StackPanel Spacing="12" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Assets/Logo.png" Width="128" Height="128" />
                        <TextBlock Text="欢迎使用 HyperZoneFRP" FontSize="28" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="简单、高效、安全，连接你我，穿透未来" FontSize="16" Foreground="#DDDDDD" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- 第 2 页：特性一 -->
                <Grid Padding="48">
                    <StackPanel Spacing="24" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🚀 极速连接，多节点支持" FontSize="28" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="在全球多个节点中选择，总有适合您的最佳线路。" FontSize="18" Foreground="#DDDDDD" TextWrapping="Wrap" TextAlignment="Center" MaxWidth="500"/>
                    </StackPanel>
                </Grid>

                <!-- 第 3 页：特性二 -->
                <Grid Padding="48">
                    <StackPanel Spacing="24" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="💻 直观图形界面，告别命令行" FontSize="28" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="所有操作都在现代化的图形界面中完成，轻松管理您的所有隧道。" FontSize="18" Foreground="#DDDDDD" TextWrapping="Wrap" TextAlignment="Center" MaxWidth="500"/>
                    </StackPanel>
                </Grid>

                <!-- 第 4 页：特性三 (最后一页) -->
                <Grid Padding="48">
                    <StackPanel Spacing="24" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🔔 系统级通知，状态尽在掌握" FontSize="28" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="隧道上线、下线，即时通过 Windows 通知中心提醒您。" FontSize="18" Foreground="#DDDDDD" TextWrapping="Wrap" TextAlignment="Center" MaxWidth="500"/>

                        <!-- 6. 开始按钮，默认隐藏 -->
                        <Button x:ConnectionId='14' x:Name="StartButton" 
                                Content="开始使用" 
                                Style="{StaticResource WelcomeButtonStyle}" 
                                                         
                                Opacity="0"
                                Margin="0,48,0,0"/>
                    </StackPanel>
                </Grid>
            </FlipView>

            <!-- 7. 翻页指示器 (放在最顶层) -->
            <PipsPager x:ConnectionId='13' x:Name="FeaturesPipsPager"
                       Grid.Row="1"
                       NumberOfPages="4"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Padding="24"
                                                                                                />
        </Grid>
    </Grid>
</Page>

